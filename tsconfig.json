{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "src",
    "paths": {
      "public/*": ["public/*"],
      "components/*": ["components/*"],
      "utils/*": ["utils/*"],
      "pages/*": ["src/pages/*"],
      "styles/*": ["styles/*"],
      "hooks/*": ["hooks/*"],
      "assets/*": ["assets/*"],
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "__test__/index.test.js"],
  "exclude": ["node_modules"]
}
